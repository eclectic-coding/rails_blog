<div id="toast" class="container position-relative">
  <div data-controller="toast" data-delay="5000" class="toast position-absolute my-2 top-0 end-0" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
      <strong class="me-auto">Message</strong>
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body">
      <%= message %>
    </div>
  </div>
</div>